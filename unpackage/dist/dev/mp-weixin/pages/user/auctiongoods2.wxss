
.kzt-box {
	padding: 15vh 0;
}
.kzt {
	width: 240rpx;
	height: 240rpx;
	display: block;
	margin: auto;
}
.loading {
	width: 480rpx;
	height: 480rpx;
	display: block;
	margin: auto;
}


.no-more {
	padding: 24rpx 0;
	text-align: center;
}


.cu-bar .action:first-child {
	margin-left: 32rpx;
	font-size: 36rpx;
}
.order-nav {
	font-size: 28rpx;
	line-height: 40rpx;
	color: #606266;
	padding: 12rpx 32rpx;
	position: relative;
}
.order-nav.cur {
	color: #FF411C;
	font-weight: bold;
}
.cur-icon {
	display: none;
	width: 48rpx;
	height: 4rpx;
	background-color: #FF411C;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	margin: 0 auto;
}
.order-nav.cur .cur-icon {
	display: block;
}
.container {
	padding: 16rpx 20rpx;
}
.order-list {
	padding: 16rpx 24rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	background-color: #fff;
}
.order-list+.order-list {
	margin-top: 24rpx;
}
.goods-info+.goods-info {
	margin-top: 24rpx;
}
.goods-image {
	width: 160rpx;
	height: 160rpx;
}
.goods-name {
	width: 100%;
	font-size: 28rpx;
	color: #303133;
	line-height: 40rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
}
.small-radio-btn {
	line-height: 66rpx;
}

