
.kzt-box {
	padding: 15vh 0;
}
.kzt {
	width: 240rpx;
	height: 240rpx;
	display: block;
	margin: auto;
}
.loading {
	width: 480rpx;
	height: 480rpx;
	display: block;
	margin: auto;
}


.no-more {
	padding: 24rpx 0;
	text-align: center;
}


.container {
	padding: 8rpx 20rpx;
}
.toker-info {
	padding: 32rpx 30rpx;
	background-color: #fff;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
}
.info-title {
	width: 176rpx;
}
.screen-record {
	width: calc(100% + 64rpx);
	height: 78rpx;
	margin-left: -32rpx;
	margin-top: -24rpx;
	border-bottom: 2rpx solid #f7f7fa;
	margin-bottom: 24rpx;
}
.screen-record > view {
	color: #939399;
	padding: 0 32rpx;
	height: 100%;
	position: relative;
}
.screen-record > view.cur {
	color: #FF411C;
}
.cur-icon {
	width: 80rpx;
	height: 4rpx;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	margin: 0 auto;
	display: none;
	background-color: #FF411C;
}
.screen-record > view.cur .cur-icon {
	display: block;
}
.order-list {
	padding: 16rpx 24rpx;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	background-color: #fff;
}
.order-list+.order-list {
	margin-top: 24rpx;
}
.goods-info+.goods-info {
	margin-top: 24rpx;
}
.goods-image {
	width: 160rpx;
	height: 160rpx;
}
.goods-name {
	width: 100%;
	font-size: 28rpx;
	color: #303133;
	line-height: 40rpx;
	display: -webkit-box;    
	-webkit-box-orient: vertical;    
	-webkit-line-clamp: 2;    
	overflow: hidden;
}

