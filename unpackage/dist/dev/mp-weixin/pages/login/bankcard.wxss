}
.bankinfo-title {
	width: 200rpx;
	font-size: 30rpx;
	color: #303133;
}
.bankinfo-content {
	font-size: 30rpx;
	color: #606266;
}
.border-btn {
	border-radius: 45rpx;
}
.bg-pp {
	background: linear-gradient(127deg, #E93A37 0%, #FF6346 100%);
}
