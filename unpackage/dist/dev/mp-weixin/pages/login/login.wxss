
page {
	background-color: #fff;
	min-height: 100vh;
}
.container {
	padding: 40rpx 40rpx;
}
.logo {
	width: 240rpx;
	height: 240rpx;
	-webkit-border-radius: 24rpx;
	        border-radius: 24rpx;
}
.title {
	font-size: 30rpx;
	width: 150rpx;
}
.form-group {
	width: 100%;
	height: 90rpx;
	background: #FFFFFF;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 32rpx;
}
.form-group input {
	height: 100%;
	padding: 0 32rpx;
	font-size: 30rpx;
	border: 1px solid #DDDDE6;
	opacity: 1;
	-webkit-border-radius: 16rpx;
	        border-radius: 16rpx;
	width: 100%;
	color: #303133;
	display: inline-block;
}
.form-group input::-webkit-input-placeholder {
	color: #c4c4cc;
}
.form-group input::placeholder {
	color: #c4c4cc;
}
.form-group-btn {
	width: 224rpx;
	height: 90rpx;
	background: #FFFFFF;
	border: 1px solid #FF411C;
	opacity: 1;
	-webkit-border-radius: 16rpx;
	        border-radius: 16rpx;
	display: inline-block;
	font-size: 30rpx;
	line-height: 90rpx;
	color: #FF411C;
	-webkit-flex-shrink: 0;
	        flex-shrink: 0;
}
.border-btn {
	-webkit-border-radius: 45rpx;
	        border-radius: 45rpx;
}
.bg-pp {
	background: -webkit-linear-gradient(323deg, #E93A37 0%, #FF6346 100%);
	background: linear-gradient(127deg, #E93A37 0%, #FF6346 100%);
}
.cu-btn.lg {
	font-size: 28rpx;
	height: 90rpx;
}
.other-login {
	margin: 12vh auto 0;
	width: calc(100% - 64rpx);
}
.other-login-title .line {
	width: 198rpx;
	height: 2rpx;
	background-color: #dddde3;
}
.wx-login-icon {
	width: 80rpx;
	height: 80rpx;
}

